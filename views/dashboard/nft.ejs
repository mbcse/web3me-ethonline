    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-12">
          <div class="card mb-4">
            <div class="card-header pb-0">
              <h6>Your NFT's</h6>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
              <div class="table-responsive p-0">
                <table class="table align-items-center mb-0">
                  <thead>
                    <tr>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder">NFT ID</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder">Name</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder">Symbol</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder">NFT Type</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder">NFT Contract Address</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder">Amount</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder">Metadata URL</th>

                    </tr>
                  </thead>
                  <tbody>
                    <% nftData.nfts.map((nft)=>{ %>
                    <tr>
                      <td>
                        <p class="text-center text-xs font-weight-bold mb-0"><%=nft.tokenId%></p>
                      </td>
                      <td>
                        <p class="text-center text-xs font-weight-bold mb-0"><%=nft.name%></p>
                      </td>

                      <td class="align-middle text-center">
                        <span class="text-secondary text-xs font-weight-bold"><%=nft.symbol%></span>
                      </td>
                      <td class="align-middle text-center text-sm">
                        <span class="badge badge-sm bg-gradient-success"><%=nft.contractType%></span>
                      </td>
                      <td class="align-middle text-center">
                        <span class="text-secondary text-xs font-weight-bold"><%=nft.tokenAddress%></span>
                      </td>
                      <td class="align-middle text-center">
                        <span class="text-secondary text-xs font-weight-bold"><%=nft.amount%></span>
                      </td>
                      <td class="align-middle text-center">
                        <span class="text-secondary text-xs font-weight-bold"><%=nft.tokenUri%></span>
                      </td>
                      <td class="align-middle text-center">
                        <button class="badge badge-sm bg-gradient-danger" data-bs-toggle="modal"data-bs-target="#modal<%=nft.tokenId%>">Visualize Metadata</button>
                      </td>
                         <!-- Modal -->
    <div class="modal fade" id="modal<%=nft.tokenId%>" tabindex="-1" role="dialog" aria-labelledby="modal<%=nft.tokenId%>Title" aria-hidden="true">
      <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content rounded-0">
          <div class="modal-body py-0">

            
            <div class="d-flex main-content">
              <div class="bg-image promo-img mr-3" style="background-image: url('<%=nft.tokenMetadata && nft.tokenMetadata.image%>');">
                <span class="price"></span>
              </div>
              <div class="content-text p-4 px-5 align-item-stretch">
                <div class="text-center">
                    <a href="#" class="share"><span class="icon-share"></span></a>
                    <h3 class="mb-3 line"><%=nft.tokenMetadata && nft.tokenMetadata.name%></h3>
                    <p class="mb-3">
                        <span class="icon-star text-warning"></span>
                        <span class="icon-star text-warning"></span>
                        <span class="icon-star text-warning"></span>
                        <span class="icon-star text-warning"></span>
                        <span class="icon-star"></span>
                    </p>

                    <p class="mb-5"><%=nft.tokenMetadata && nft.tokenMetadata.description%></p>
                    <% if(nft.tokenMetadata) Object.entries(nft.tokenMetadata).map((entry) => {%>
                    <p class="badge badge-sm bg-gradient-success"><%=entry[0]%> = <%=entry[1]%>  </p>
                    <%})%>
                </div>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>
                    </tr>
                    
                  <%})%>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <div class="card mb-4">
            <div class="card-header pb-0">
              <h6>NFT Transfers</h6>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
              <div class="table-responsive p-0">
                <table class="table align-items-center mb-0">
                  <thead>
                    <tr>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder">NFT ID</th>
                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder">Name</th>
