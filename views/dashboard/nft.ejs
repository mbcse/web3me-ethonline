                      <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder">Transaction Hash</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% nftData.transfers.map((transfer)=>{ %>
                    <tr>
                      <td>
                        <p class="text-center text-xs font-weight-bold mb-0"><%=transfer.tokenId%></p>
                      </td>
                      <td>
                        <p class="text-center text-xs font-weight-bold mb-0"><%=transfer.name%></p>
